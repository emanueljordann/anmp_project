<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/expenses_navigation"
    app:startDestination="@id/itemExpenses">

    <fragment
        android:id="@+id/itemExpenses"
        android:name="com.example.anmproject.view.ExpensesFragment"
        android:label="fragment_expenses"
        tools:layout="@layout/fragment_expenses" >
        <action
            android:id="@+id/actionNewExpenses"
            app:destination="@id/newExpensesFragment"
            app:popUpTo="@id/itemExpenses" />
        <action
            android:id="@+id/actionDialog"
            app:destination="@id/dialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/newExpensesFragment"
        android:name="com.example.anmproject.view.NewExpensesFragment"
        android:label="fragment_new_expenses"
        tools:layout="@layout/fragment_new_expenses" >
        <action
            android:id="@+id/actionExpenses"
            app:destination="@id/itemExpenses" />
    </fragment>
    <fragment
        android:id="@+id/itemBudgeting"
        android:name="com.example.anmproject.view.BudgetingFragment"
        android:label="fragment_budgeting"
        tools:layout="@layout/fragment_budgeting" >
        <action
            android:id="@+id/actionNewBudget"
            app:destination="@id/newBudgetingFragment"
            app:popUpTo="@id/itemBudgeting"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/itemProfile"
        android:name="com.example.anmproject.view.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/itemReport"
        android:name="com.example.anmproject.view.ReportFragment"
        android:label="fragment_report"
        tools:layout="@layout/fragment_report" />
    <fragment
        android:id="@+id/newBudgetingFragment"
        android:name="com.example.anmproject.view.NewBudgetingFragment"
        android:label="fragment_new_budgeting"
        tools:layout="@layout/fragment_new_budgeting" >
        <action
            android:id="@+id/actionBudgeting"
            app:destination="@id/itemBudgeting"
            app:popUpTo="@id/itemBudgeting" />
        <argument
            android:name="nominal"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="budgetName"
            app:argType="string"
            android:defaultValue='""' />
        <argument
            android:name="newBudget"
            app:argType="boolean"
            android:defaultValue="true" />
        <argument
            android:name="id"
            app:argType="string"
            android:defaultValue='""' />
    </fragment>
    <dialog
        android:id="@+id/dialogFragment"
        android:name="com.example.anmproject.view.DialogFragment"
        android:label="fragment_dialog"
        tools:layout="@layout/fragment_dialog" >
        <argument
            android:name="tanggal"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="deskripsi"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="kategori"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="total"
            app:argType="integer"
            android:defaultValue="0" />
    </dialog>
</navigation>